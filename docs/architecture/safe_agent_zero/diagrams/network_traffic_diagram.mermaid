flowchart TB
    subscriber((User / Internet))

    subgraph "Docker Host (MacBook Pro)"
        subgraph "Frontend Network (Public)"
            guard[fa:fa-shield Nginx Guard]
        end

        subgraph "Control Network (Internal)"
            agent["fa:fa-brain Agent Zero<br/>(OpenClaw)"]
        end

        subgraph "Execution Network (Air-Gapped)"
            scout["fa:fa-eye Scout<br/>(Browser Sub-Agent)"]
        end
    end

    %% Ingress Flow
    subscriber -- "HTTPS:443" --> guard
    guard -- "Proxy / Commands" --> agent

    %% Egress Flow (Filtered)
    agent -- "Whitelist Only (LLM APIs, GitHub)" --> guard
    guard -- "Egress" --> subscriber

    %% Execution Flow (Isolated)
    agent -- "Command: Browse(URL)" --> scout
    scout -- "Open Internet (Any Site)" --> subscriber

    %% Styling
    style guard fill:#f9f,stroke:#333,stroke-width:2px
    style agent fill:#bbf,stroke:#333,stroke-width:2px
    style scout fill:#bfb,stroke:#333,stroke-width:2px

    %% Cross-Network Restrictions
    linkStyle 4 stroke:red,stroke-width:4px,stroke-dasharray: 5 5;
    
    note_guard["Guard blocks all non-whitelisted traffic"]
    note_exec["Scout connects to Internet to render pages<br/>Returns: Screenshots & Text Tree (DOM snapshot)"]
    
    guard -.-> note_guard
    scout -.-> note_exec
